<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Dashboard">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
            android:id="@+id/makeapost"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:src="@drawable/fotoprofil"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#ffffff"
                />
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/profile_image"
                        android:hint="What Are you thingking Dewik?"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:background="#02FFFFFF"
                        android:id="@+id/what"
                />
                <TextView
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pict"
                        android:textColor="#000000"
                        android:layout_toRightOf="@id/what"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="12dp"
                        android:drawableLeft="@drawable/ic_image_black"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:id="@+id/postingan"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="2dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/friendimage"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:src="@drawable/friendprofil"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#ffffff"
            />
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Lailatul Badriyah"
                    android:id="@+id/fullname"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/friendimage"
            />
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:text=" @ilaaaa"
                    android:id="@+id/username"
                    android:textSize="15dp"
                    android:textColor="#92000000"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/fullname"
                    android:layout_toRightOf="@id/friendimage"
            />
            <ImageView
                    android:layout_below="@id/status"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:src="@drawable/friendpost"
                    android:id="@+id/friendpost"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/friendimage"
                    android:text="Lagi ke Bromo nih..."
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:id="@+id/status"
                    android:textSize="18dp"
            />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>
