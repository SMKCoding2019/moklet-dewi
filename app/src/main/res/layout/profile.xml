<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Profile">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <android.support.v7.widget.CardView
            android:id="@+id/myprofile"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp"
    >
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
            >
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="My Profile"
                        android:id="@+id/post"
                        android:textSize="17dp"
                        android:textColor="#000000"
                        android:padding="5dp"
                        android:textStyle="bold"
                />

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_height="80dp"
                        android:layout_width="80dp"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        app:civ_border_width="2dp"
                        android:layout_below="@+id/post"
                        app:civ_border_color="#ffffff"
                        android:src="@drawable/fotoprofil"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/profile_image"
                        android:layout_marginTop="20dp"
                        android:text="Dewi Ayu Alamanda"
                        android:layout_below="@+id/post"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:id="@+id/fullname"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/profile_image"
                        android:layout_below="@+id/fullname"
                        android:text=" @ddewik"
                        android:textSize="15dp"
                        android:textColor="#92000000"
                        android:textStyle="bold"
                />
                <Button
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="#008080"
                        android:text="Edit"
                        android:layout_below="@+id/post"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/fullname"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                />
                <TextView
                        android:id="@+id/shotsval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_image"
                        android:text="2"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="60dp"
                />
                <TextView
                        android:id="@+id/shots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/shotsval"
                        android:text="Shots"
                        android:layout_marginLeft="47dp"
                        android:textColor="#92000000"

                />
                <TextView
                        android:id="@+id/followerval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_image"
                        android:text="100"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="150dp"
                />
                <TextView
                        android:id="@+id/follower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/followerval"
                        android:text="Follower"
                        android:textColor="#92000000"
                        android:layout_marginLeft="142dp"
                />
                <TextView
                        android:id="@+id/followingval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_image"
                        android:text="90"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="260dp"
                />
                <TextView
                        android:id="@+id/following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/followingval"
                        android:text="Following"
                        android:textColor="#92000000"
                        android:layout_marginLeft="243dp"
                />
            </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:id="@+id/postingan"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="2dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
        >
          <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Intro"
                  android:id="@+id/intro"
                  android:textSize="19dp"
                  android:textColor="#000000"
                  android:padding="5dp"
                  android:textStyle="bold"
          />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stayIn"
                    android:layout_below="@id/intro"
                    android:text="Stay In"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/ic_home"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stayInVal"
                    android:text=" Malang, Sawojajar"
                    android:layout_toRightOf="@id/stayIn"
                    android:layout_below="@id/intro"
                    android:textSize="15dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/from"
                    android:layout_below="@id/stayIn"
                    android:text="From"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/ic_from"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fromVal"
                    android:text=" Malang"
                    android:layout_toRightOf="@id/from"
                    android:layout_below="@id/stayIn"
                    android:textSize="15dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gender"
                    android:layout_below="@id/from"
                    android:text="Gender"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/ic_gender"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/genderVal"
                    android:text=" Perempuan"
                    android:layout_toRightOf="@id/gender"
                    android:layout_below="@id/from"
                    android:textSize="15dp"
            />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>